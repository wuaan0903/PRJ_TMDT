<script>
    document.addEventListener('DOMContentLoaded', async function () {
        // Lấy orderId từ URL
        const orderId = window.location.pathname.split('/').pop();

        try {
            // Gọi API để lấy thông tin đơn hàng
            const response = await fetch(`/api/orders/${orderId}`);
            if (!response.ok) {
                alert('Không thể tải thông tin đơn hàng. Vui lòng thử lại sau.');
                return;
            }

            const order = await response.json();

            // Hiển thị thông tin đơn hàng
            document.querySelector('.orderId').textContent = `#${order._id}`;
            document.querySelector('.order-summary .name').textContent = order.name;
            document.querySelector('.order-summary .phone-number').textContent = order.phoneNumber;
            document.querySelector('.order-summary .address').textContent = order.address;
            document.querySelector('.order-summary .payment-method').textContent = order.paymentMethod === 'vnpay' ? 'VNPay' : 'Thanh toán khi nhận hàng (COD)';

            // Hiển thị danh sách sản phẩm
            const productContainer = document.querySelector('.order-summary .product-list');
            if (!order.products || order.products.length === 0) {
                productContainer.innerHTML = '<p>Không có sản phẩm nào trong đơn hàng.</p>';
                return;
            }

            async function fetchProductDetails(productId) {
                const response = await fetch(`/api/product/${productId}`);
                if (!response.ok) {
                    throw new Error(`Failed to fetch product details for ID: ${productId}`);
                }
                return await response.json();
            }

            productContainer.innerHTML = await Promise.all(order.products.map(async product => {
                try {
                    const productDetails = await fetchProductDetails(product.productId);
                    return `
                        <div class="d-flex align-items-center mb-3">
                            <img src=" http://localhost:3002/api/products/thumbnail/${productDetails.thumbnail}" width="70" alt="${productDetails.name}">
                            <div class="ms-3">
                                <p class="mb-0 letter-spacing fs-6"><strong>${productDetails.name}</strong></p>
                                <p class="letter-spacing fs-6">Size: ${product.size} | Số lượng: ${product.quantity}</p>
                            </div>
                            <div class="ms-auto">
                                <p class="fw-bold letter-spacing fs-6">${(productDetails.price).toLocaleString('vi-VN', { style: 'currency', currency: 'VND' })}</p>
                            </div>
                        </div>
                    `;
                } catch (error) {
                    console.error(`Error fetching details for product ID: ${product.productId}`, error);
                    return `<p>Không thể tải thông tin sản phẩm (ID: ${product.productId}).</p>`;
                }
            })).then(results => results.join(''));

            // Hiển thị tổng tiền và giảm giá
            document.querySelector('.order-summary .total-amount').textContent = order.totalAmount.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
            document.querySelector('.order-summary .discount').textContent = order.discount ? order.discount.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) : '0 VND';
            document.querySelector('.order-summary .final-amount').textContent = (order.totalAmount - (order.discount || 0)).toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
        } catch (error) {
            console.error('Error fetching order details:', error);
            alert('Không thể tải thông tin đơn hàng. Vui lòng thử lại sau.');
        }
    });
</script>

