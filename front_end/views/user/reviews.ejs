        <!-- Nội dung chính bên phải được đặt trong khung giống như sidebar -->
        <div class="col-md-9">
            <div class="sidebar">
                <h2 class="fw-bold">Đánh giá và phản hồi</h2>
                <div id="user-reviews-container">
                    <!-- Danh sách review sẽ được hiển thị ở đây -->
                </div>
                <p class="text-muted">Bạn chưa có đánh giá nào...</p>
                <div class="card shadow-sm border-0 custom-card mt-3 p-3">
                    <div class="position-relative">
                        <img src="https://mcdn.coolmate.me/image/September2023/mceclip0_96.jpg" alt="Ưu đãi" class="img-fluid">
                        <div class="custom-content">
                            <h4 class="fw-bold">Nhiều ưu đãi hấp dẫn<br>đang chờ bạn</h4>
                            <a href="#" class="custom-btn">KHÁM PHÁ NGAY →</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', async () => {
        const reviewsContainer = document.getElementById('user-reviews-container');

        // Hàm lấy danh sách review của người dùng
        async function fetchUserReviews() {
            try {
                const response = await fetch('/api/user/reviews'); // API lấy danh sách review của người dùng
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                const reviews = await response.json();
                displayUserReviews(reviews);
            } catch (error) {
                console.error('Error fetching user reviews:', error);
                reviewsContainer.innerHTML = '<p class="text-muted">Không thể tải danh sách đánh giá.</p>';
            }
        }

        // Hàm hiển thị danh sách review
        function displayUserReviews(reviews) {
            if (!reviews || reviews.length === 0) {
                reviewsContainer.innerHTML = '<p class="text-muted">Bạn chưa có đánh giá nào...</p>';
                return;
            }

            const reviewsHtml = reviews.map(review => `
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">${'★'.repeat(review.rate)}${'☆'.repeat(5 - review.rate)}</h5>
                        <p class="card-text">${review.comment}</p>
                        ${review.image_review && review.image_review.length > 0 ? `
                            <div class="mt-3">
                                ${review.image_review.map(image => `
                                    <img src="${image}" alt="Review Image" class="img-fluid" style="max-width: 100px; margin-right: 5px;">
                                `).join('')}
                            </div>
                        ` : ''}
                        ${review.reply_review && review.reply_review.trim() !== '' ? `
                            <div class="mt-3 p-3" style="background: #f8f9fa; border-radius: 8px;">
                                <h6 class="fw-bold">Phản hồi từ cửa hàng:</h6>
                                <p class="mb-0">${review.reply_review}</p>
                            </div>
                        ` : ''}
                    </div>
                </div>
            `).join('');

            reviewsContainer.innerHTML = reviewsHtml;
        }

        // Gọi hàm fetchUserReviews để lấy danh sách review
        fetchUserReviews();
    });
</script>