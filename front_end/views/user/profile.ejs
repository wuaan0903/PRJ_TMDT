<!-- Modal chỉnh sửa thông tin người dùng -->
<div class="modal fade" id="editUserModal" tabindex="-1" aria-labelledby="editUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editUserModalLabel">Chỉnh sửa thông tin người dùng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editUserForm">
                    <div class="mb-3">
                        <label for="editFullName" class="form-label">Họ và tên</label>
                        <input type="text" class="form-control" id="editFullName" required>
                    </div>
                    <div class="mb-3">
                        <label for="editPhoneNumber" class="form-label">Số điện thoại</label>
                        <input type="text" class="form-control" id="editPhoneNumber" required>
                    </div>
                    <div class="mb-3">
                        <label for="editGender" class="form-label">Giới tính</label>
                        <select class="form-control" id="editGender">
                            <option value="male">Nam</option>
                            <option value="female">Nữ</option>
                            <option value="other">Khác</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="editBirthDate" class="form-label">Ngày sinh</label>
                        <input type="date" class="form-control" id="editBirthDate">
                    </div>
                    <div class="mb-3">
                        <label for="editHeight" class="form-label">Chiều cao (cm)</label>
                        <input type="number" class="form-control" id="editHeight">
                    </div>
                    <div class="mb-3">
                        <label for="editWeight" class="form-label">Cân nặng (kg)</label>
                        <input type="number" class="form-control" id="editWeight">
                    </div>
                    <button type="submit" class="btn btn-dark w-100">Lưu thay đổi</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", async function () {
        let userId;

        // Gọi API để lấy ID người dùng
        fetch('/auth/user')
            .then(response => {
                if (response.ok) {
                    return response.json();
                } else {
                    // Redirect to login page if not logged in
                    window.location.href = '/login';
                    throw new Error('Not logged in');
                }
            })
            .then(userData => {
                userId = userData.user.user._id;
                fetchUserInfo(userId);
            })
            .catch(error => {
                console.error('Error fetching user ID:', error);
            });

        // Gọi API để lấy thông tin người dùng
        async function fetchUserInfo(userId) {
            try {
                const response = await fetch(`/api/account/${userId}`);
                if (!response.ok) {
                    throw new Error(`HTTP error! Status: ${response.status}`);
                }
                const user = await response.json();

                // Hiển thị thông tin người dùng
                document.getElementById('fullName').textContent = user.username;
                document.getElementById('phoneNumber').textContent = user.phone_number;
                document.getElementById('gender').textContent = user.gender || 'Chưa cập nhật!';
                document.getElementById('birthDate').textContent = user.birthDate ? new Date(user.birthDate).toLocaleDateString() : 'Hãy cập nhật ngày sinh để nhận quà đặc biệt';
                document.getElementById('height').textContent = user.height ? `${user.height} cm` : 'Chưa cập nhật!';
                document.getElementById('weight').textContent = user.weight ? `${user.weight} kg` : 'Chưa cập nhật!';
                document.getElementById('email').textContent = user.email;
            } catch (error) {
                console.error('Error fetching user info:', error);
            }
        }

        // Thêm sự kiện cho nút cập nhật để hiện modal chỉnh sửa thông tin người dùng
        document.querySelector('.btn-dark.w-100.mt-3.fw-bold').addEventListener('click', function () {
            // Điền thông tin người dùng vào form chỉnh sửa
            document.getElementById('editFullName').value = document.getElementById('fullName').textContent;
            document.getElementById('editPhoneNumber').value = document.getElementById('phoneNumber').textContent;
            document.getElementById('editGender').value = document.getElementById('gender').textContent.toLowerCase();
            document.getElementById('editBirthDate').value = document.getElementById('birthDate').textContent !== 'Hãy cập nhật ngày sinh để nhận quà đặc biệt' ? new Date(document.getElementById('birthDate').textContent).toISOString().split('T')[0] : '';
            document.getElementById('editHeight').value = document.getElementById('height').textContent !== 'Chưa cập nhật!' ? parseInt(document.getElementById('height').textContent) : '';
            document.getElementById('editWeight').value = document.getElementById('weight').textContent !== 'Chưa cập nhật!' ? parseInt(document.getElementById('weight').textContent) : '';

            // Hiện modal chỉnh sửa thông tin người dùng
            const editUserModal = new bootstrap.Modal(document.getElementById('editUserModal'));
            editUserModal.show();
        });

        // Xử lý sự kiện submit form chỉnh sửa thông tin người dùng
        document.getElementById('editUserForm').addEventListener('submit', async function (event) {
            event.preventDefault();

            const updatedUserInfo = {
                username: document.getElementById('editFullName').value,
                phone_number: document.getElementById('editPhoneNumber').value,
                gender: document.getElementById('editGender').value,
                birthDate: document.getElementById('editBirthDate').value,
                height: document.getElementById('editHeight').value,
                weight: document.getElementById('editWeight').value
            };

            try {
                const response = await fetch(`/api/users/${userId}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(updatedUserInfo)
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! Status: ${response.status}`);
                }

                // Cập nhật thông tin người dùng trên giao diện
                fetchUserInfo(userId);

                // Đóng modal sau khi cập nhật thành công
                const editUserModal = bootstrap.Modal.getInstance(document.getElementById('editUserModal'));
                editUserModal.hide();
            } catch (error) {
                console.error('Error updating user info:', error);
            }
        });
    });
</script>
